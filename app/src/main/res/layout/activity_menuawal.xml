<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    >

    <TextView
        android:layout_width="360dp"
        android:layout_height="70dp"
        android:text="tiketBola"
        android:textSize="40dp"
        android:gravity="center"
        android:textColor="#fff"
        android:textStyle="bold"
        android:background="@color/colorSecondaryDark"/>

    <ImageView
        android:layout_width="360dp"
        android:layout_height="170dp"
        android:src="@drawable/liga"
        android:layout_marginLeft="-360dp"
        android:layout_marginTop="75dp" />

    <LinearLayout
        android:layout_width="360dp"
        android:layout_height="155dp"
        android:orientation="horizontal"
        android:background="@color/backgroundutama"
        android:layout_marginLeft="-360dp"
        android:layout_marginTop="250dp">

        <ImageView
            android:id="@+id/pesan"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/tiket"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="20dp"
            android:onClick="pesan"/>


        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/calendar"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="20dp"
            android:onClick="jadwal"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="365dp"
        android:layout_height="155dp"
        android:layout_marginLeft="-363dp"
        android:layout_marginTop="400dp"
        android:background="@color/backgroundutama"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="20dp"
            android:src="@drawable/scoreboard"
            android:onClick="hasil"/>

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="20dp"
            android:src="@drawable/daftarstadion"
            android:onClick="stadion"/>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">



    </LinearLayout>
    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/ic_home_black_24dp"
        android:layout_marginLeft="-310dp"
        android:layout_marginTop="565dp"/>
    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/ic_payment_black_24dp"
        android:layout_marginLeft="70dp"
        android:layout_marginTop="565dp"
        android:onClick="mesan"/>
    <ImageView
        android:id="@+id/profil"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/ic_profil"
        android:layout_marginLeft="70dp"
        android:layout_marginTop="565dp"
        android:onClick="orang"/>

</LinearLayout>